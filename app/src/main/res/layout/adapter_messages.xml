<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearance="@style/CornerCut"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:id="@+id/imageCustomerProfile"
        android:src="@drawable/profiles"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/textCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textStyle="bold"
            android:text="@string/juan_dela_cruz"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/textLatestMessage"
            android:ellipsize="end"
            android:textColor="@color/text_color"
            android:text="@string/this_is_sample_message_only_try_another_coder_here_hahaha"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:id="@+id/textTimestamp"
            android:layout_gravity="end"
            android:textColor="@color/black"
            android:text="1 minute ago"/>
    </LinearLayout>

</LinearLayout>
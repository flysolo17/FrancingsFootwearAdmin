<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.google.android.material.imageview.ShapeableImageView
        app:shapeAppearance="@style/CornerCut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:id="@+id/imageCustomerProfile"
        android:src="@drawable/profiles"
        />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Material3.CardView.Filled"
            app:cardBackgroundColor="@color/accent1"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/juan_dela_cruz"
                    android:id="@+id/textCustomerName"
                    android:textSize="12sp"
                    android:textColor="@color/text_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="300dp"
                    android:id="@+id/textMessage"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:text="Hey dude"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:textSize="12sp"
                    android:text="last year ago"
                    android:id="@+id/textDate"
                    android:textColor="@color/text_color"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>



</LinearLayout>